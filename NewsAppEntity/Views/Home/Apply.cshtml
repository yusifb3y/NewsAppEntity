    <div style="margin-left: 2vw;margin-right: 2vw;" class="container-login">
        <div class="row justify-content-center">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <form class="needs-validation justify-content-center" novalidate>

                    <div class="form-group">
                        <label for="name">Ad</label>
                        <input type="text" class="form-control pr-2 pl-2" aria-describedby="name"
                               placeholder="Enter name" required>
                        <div class="invalid-feedback">
                            Adınızı qeyd edin
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="surname">Soyad</label>
                        <input type="text" class="form-control" aria-describedby="surname" placeholder="Enter surname"
                               required>
                        <div class="invalid-feedback">
                            Soyadınızı qeyd edin
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email ünvanı</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                               placeholder="Emaili daxil edin" required>
                        <div class="invalid-feedback">
                            Email ünvanızı qeyd edin
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="validationTextarea">Məqalə</label>
                        <textarea maxlength="300" minlength="15" class="form-control" id="validationTextarea"
                                  placeholder="Meqalinizi yazin.." required></textarea>
                        <div class="invalid-feedback">
                            Məqalənizi boş qoymayın
                        </div>
                    </div>


                    <div class="form-group" class="">
                        <button style="align-items:flex-end;background-color: rgb(63, 63, 151);" type="submit"
                                class="mt-4  btn-block  btn btn-primary">
                            Gonder
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>




    <script>


        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();


    </script>


