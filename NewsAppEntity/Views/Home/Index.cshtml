    <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @{ int i = 1;}
            @foreach (var item in Model.News)
            {
                if (i == 1)
                {
                    <div class="carousel-item active justify-content-center" data-interval="10000">
                        <div class="row justify-content-center" style="margin-left: 2vw;margin-right:2vw;margin-top:5vh;">
                            <div class="ww">
                                <div class="blog-card shadow">
                                    <div class="meta">
                                        <div class="photo"
                                             style="background-image: url(~/images/@item.Photo.FileName)">
                                        </div>
                                    </div>
                                    <a href="~/folder/index.html" style="text-decoration: none;">
                                        <div class="description">
                                            <h1>@item.Title</h1>
                                            <h2>@item.Subtitle</h2>
                                            <p>
                                                @item.HtmlContent
                                            </p>
                                            <p class="read-more">
                                                <a href="~/folder/index.html">Daha çox..</a>
                                            </p>
                                        </div>
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>
                }
                if (i > 1)
                {
                    <div class="carousel-item justify-content-center" data-interval="2000">
                        <div class="row justify-content-center" style="margin-left: 2vw;margin-right:2vw;margin-top:5vh;">
                            <div class="ww">
                                <div class="blog-card shadow">
                                    <div class="meta">
                                        <div class="photo" style="background-image: url(~/images/@item.Photo.FileName);"></div>
                                    </div>
                                    <a href="~/folder/index.html" style="text-decoration: none;">
                                        <div class="description">
                                            <h1>@item.Title</h1>
                                            <h2>@item.Subtitle</h2>
                                            <p>
                                               @item.HtmlContent
                                            </p>
                                            <p class="read-more">
                                                <a href="~/folder/index.html">Daha çox..</a>
                                            </p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                i++;
                if (i == 5)
                    break;
            }
         
        <a class="carousel-control-prev" style="width:10vw" href="#carouselExampleInterval" role="button"
           data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" style="width:10vw" href="#carouselExampleInterval" role="button"
           data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
